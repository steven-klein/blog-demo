{
	"name": "source.test",
	"version": "0.0.1",
	"description": "A WordPress Demo Site",
	"author": "Breakstation Creative <dev@brkstn.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
        "build": "npm-run-all --serial clean --parallel copy js css:** composer",
		"clean": "npm-run-all --parallel clean:**",
		"clean:assets": "del-cli httpdocs/app/themes/site_theme/assets",
		"composer": "composer dumpautoload --optimize",
		"copy": "npm-run-all --parallel copy:**",
		"copy:img": "cpx 'resources/assets/img/**/*.{jpg,jpeg,gif,png,svg}' httpdocs/app/themes/site_theme/assets/img",
		"copy:fontawesome": "cpx 'node_modules/font-awesome/fonts/**/*' httpdocs/app/themes/site_theme/assets/fonts",
		"css": "npm-run-all --parallel css:**",
        "css:site": "postcss -c postcss.config.js",
		"css:editor": "postcss -c postcss.config.editor.js",
		"deploy:prod": "cross-env NODE_ENV=production npm run build && project-sync prod up",
		"deploy:dev": "cross-env NODE_ENV=production npm run build && project-sync dev up",
		"js": "rollup -c rollup.config.js",
		"postversion": "git push && git push --tags",
		"serve": "browser-sync start -c browsersync.config.js",
		"test": "cross-env NODE_ENV=production npm run build",
		"uploads:prod": "cd httpdocs/app/uploads && project-sync prod_uploads down && cd ../../../",
		"uploads:dev": "cd httpdocs/app/uploads && project-sync dev_uploads down && cd ../../../",
		"watch": "npm-run-all --serial clean --parallel copy js css --parallel \"js -- --watch\" \"css:site -- --watch\" \"css:editor -- --watch\" \"copy:img -- --watch\" serve"
	},
	"devDependencies": {
		"browser-sync": "^2.18.5",
		"cpx": "^1.5.0",
		"cross-env": "^3.1.4",
		"cssnano": "^3.9.1",
		"del-cli": "^0.2.1",
		"dotenv": "^4.0.0",
		"npm-run-all": "^4.0.0",
        "postcss": "^5.2.8",
		"postcss-browser-reporter": "^0.5.0",
		"postcss-cli": "^2.6.0",
		"postcss-cssnext": "^2.9.0",
		"postcss-import": "^9.0.0",
		"postcss-reporter": "^3.0.0",
        "project-sync": "^1.0.0",
		"rollup": "^0.41.4",
		"rollup-plugin-buble": "^0.15.0",
		"rollup-plugin-commonjs": "^7.0.0",
		"rollup-plugin-includepaths": "^0.1.8",
		"rollup-plugin-node-resolve": "^2.0.0",
		"rollup-plugin-replace": "^1.1.1",
		"rollup-plugin-uglify": "^1.0.1",
		"rollup-watch": "^3.1.0"
	},
    "dependencies": {
		"@fancyapps/fancybox": "^3.0.48",
		"classlist-polyfill": "^1.0.3",
		"font-awesome": "^4.7.0",
		"jquery-mobile": "^1.5.0-alpha.1",
		"milligram-cssnext": "^1.0.1",
		"normalize-css": "^2.3.1"
	},
	"browserslist": [
		"last 4 versions",
		"ie >= 9",
		"ios >= 7",
		"safari >= 5.1",
		"android >= 4",
		"last 4 and_chr versions",
		"last 4 and_ff versions",
		"last 1 op_mini version",
		"last 4 and_uc versions",
		"last 4 op_mob versions",
		"last 4 Samsung versions",
		"not ie <= 8"
	],
	"engines": {
		"node": ">=4.0.0"
	}
}
