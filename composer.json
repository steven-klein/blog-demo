{
    "name": "brkstn/source.test",
    "type": "project",
    "license": "MIT",
    "description": "A WordPress Demo Site",
    "authors": [
        {
            "name": "Breakstation Creative",
            "email": "dev@brkstn.com"
        }
    ],
    "keywords": [
        "wordposer",
        "wordpress",
        "stack",
        "composer",
        "wp"
    ],
    "config": {
        "preferred-install": "dist"
    },
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        "brkstn/wp-toolbox": {
            "type": "vcs",
            "url": "git@bitbucket.org:brkstn/brkstnwptoolbox.git"
        },
        "brkstn/WPContactForms": {
            "type": "vcs",
            "url": "git@bitbucket.org:brkstn/wpcontactforms.git"
        }
    },
    "require": {
        "php": ">=5.6",
        "composer/installers": "~1.2.0",
        "vlucas/phpdotenv": "^2.0.1",
        "johnpbloch/wordpress": "^4.7",
        "oscarotero/env": "^1.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "solarissmoke/disable-comments-mu": "^1.1",
        "brkstn/version": "~1.0.0",
        "brkstn/wp-toolbox": "~3.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5.1"
    },
    "extra": {
        "installer-paths": {
            "httpdocs/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "httpdocs/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "httpdocs/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "httpdocs/wp"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs --ignore=httpdocs/wp/,vendor/ -n -s ."
        ]
    }
}
